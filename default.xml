         1.3.0 is last tagged version, on may 17.
 -->
    <project name="lyft/envoy" path="envoy"/>

    <!-- 'canary' removed from eds - breaks envoy -->
    <project path="src/envoy-api" name="lyft/envoy-api"
        revision="89c068ddbdb8ac5e513351c8772efc924787aad1"/>

    <project path="src/googleapis/src" name="googleapis/googleapis" />

    <project path="src/grpc_transcoding" remote="github" name="grpc-ecosystem/grpc-httpjson-transcoding"/>
