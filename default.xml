<manifest>
    <!-- updated version -->

    <remote name="istio" fetch="git://github.com/istio/"/>
    <remote name="github" fetch="git://github.com/"/>
    <remote name="costinm" fetch="git://github.com/costinm/"/>
    <remote name="google" fetch="git://github.com/google"/>
    <remote name="boringssl" fetch="https://boringssl.googlesource.com"/>
