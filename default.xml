    <project path="third_party/lightstep-tracer/src" remote="github" name="lightstep/lightstep-tracer-cpp" revision="refs/tags/v0_36"/>
    <project path="third_party/lightstep-tracer/lightstep-tracer-common" remote="github" name="lightstep/lightstep-tracer-common" revision="cbbecd671c1ae1f20ae873c5da688c8c14d04ec3"    />

    <project path="src/spdlog" remote="github" name="gabime/spdlog"/>

    <project path="third_party/libevent/src" remote="github" name="libevent/libevent"/>

    <project path="third_party/nghttp2/src" remote="github" name="nghttp2/nghttp2"/>

    <project path="third_party/tclap" remote="github" name="eile/tclap"/>

    <project path="src/backward" remote="github" name="bombela/backward-cpp"/>

    <project path="src/rapidjson" remote="github" name="miloyip/rapidjson" />

    <!-- Toolchains for cross compilation -->
    <!-- Path name similar with android -->
    <project path="prebuilts/linux-x86/pi" remote="github" name="raspberrypi/tools"/>

    <project path="tools/bazelbuild/rules_go" remote="github" name="bazelbuild/rules_go" />

    <!--
     Go projects and dependencies
    -->
    <project path="src/istio.io/istio" remote="github" name="istio/istio"/>
    <project path="src/istio.io/pilot" remote="github" name="istio/pilot"/>
    <project path="src/istio.io/mixer" remote="istio" name="mixer"/>
