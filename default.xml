    Forks from unary branch, using same envoy
     -->
    <project name="mixerclient" path="src/mixerclient" remote="istio"/>
    <project name="utils/util-linux/util-linux" path="src/util-linux" remote="linux"/>

    <project path="src/proxy" remote="istio" name="proxy" />

    <project path="src/protobuf" remote="google" name="protobuf" revision="refs/tags/v3.2.0"/>

<!--    <project path="src/boringssl" remote="github" name="google/boringssl" revision="chromium-stable" />
  -->
    <project path="src/boringssl" remote="boringssl" name="boringssl" revision="chromium-stable-with-bazel" />


    <project path="third_party/cares/cares" remote="github" name="c-ares/c-ares" revision="refs/tags/cares-1_12_0" />

    <!-- Stable APIs/build from master. Releases should set the tested tags -->
