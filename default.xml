<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- Stable version -->

    <remote name="istio" fetch="git://github.com/istio/"/>
    <remote name="github" fetch="git://github.com/"/>
    <remote name="costinm" fetch="git://github.com/costinm/"/>
    <remote name="google" fetch="git://github.com/google"/>

    <default remote="costinm" revision="master" sync-j="4"  />

    <project path="." name="istio-build" revision="envoy13"/>

    <!-- Istio 0.1 is build out of proxy 466a7346f3c2c2f3cbcb0f1a74d2cd9ac6a565fe
         which uses envoy a8c446aafa2af08f525dbab2b052f25834b78139 (may 26)
         1.3.0 is last tagged version, on may 17.
 -->
    <project name="envoy" revision="v130-32bit"/>

    <!--
    Forks from unary branch, using same envoy
     -->
    <project name="mixerclient" path="src/mixerclient" remote="costinm" revision="costin"/>

    <project path="src/proxy" name="proxy" revision="costin" />

    <project path="src/protobuf" remote="google" name="protobuf" revision="refs/tags/v3.2.0"/>

    <project path="src/boringssl" remote="github" name="google/boringssl" revision="chromium-stable" />

    <project path="src/cares" remote="github" name="c-ares/c-ares" revision="refs/tags/cares-1_12_0" />

    <!-- Stable APIs/build from master. Releases should set the tested tags -->
    <project name="nodejs/http-parser" path="src/http-parser" remote="github"/>

    <project path="src/lightstep-tracer" remote="github" name="lightstep/lightstep-tracer-cpp" revision="refs/tags/v0_36"/>
    <project path="src/lightstep-tracer-common" remote="github" name="lightstep/lightstep-tracer-common"/>

    <project path="src/spdlog" remote="github" name="gabime/spdlog"/>

    <project path="src/libevent" remote="github" name="libevent/libevent"/>

    <project path="src/nghttp2" remote="github" name="nghttp2/nghttp2"/>

    <project path="src/tclap" remote="github" name="eile/tclap"/>

    <project path="src/backward" remote="github" name="bombela/backward-cpp"/>

    <project path="src/rapidjson" remote="github" name="miloyip/rapidjson" />

    <!-- Toolchains for cross compilation -->
    <!-- Path name similar with android -->
    <project path="prebuilts/linux-x86/pi" remote="github" name="raspberrypi/tools"/>

    <project path="tools/bazelbuild/rules_go" remote="github" name="bazelbuild/rules_go" />

    <!--
     Go projects and dependencies
    -->
    <project path="src/istio.io/istio" remote="github" name="istio/istio"/>
    <project path="src/istio.io/pilot" remote="github" name="istio/pilot"/>
    <project path="src/istio.io/mixer" remote="github" name="costinm/mixer"/>
    <project path="src/istio.io/auth" remote="github" name="istio/auth"/>
    <project path="src/istio.io/api" remote="github" name="costinm/api" revision="costin"/>

    <!-- Dependencies for pilot/mixer -->


    <!--
     Useful examples from envoy, not used in the build but for reference
    -->
    <project path="src/envoy-filter-example" remote="github" name="lyft/envoy-filter-example"/>
    <project path="src/github.com/lyft/ratelimit" remote="github" name="lyft/ratelimit"/>


</manifest>
